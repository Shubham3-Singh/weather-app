<div class="commonForm">
  <h1>Log In</h1>
  <%= form_with(model: @user , method: :post ) do |form| %>
    <div>
      <%= form.label :email %>
      <%= form.email_field :email %>
    </div>
    <br/>
    <div>
      <%= form.label :password %>
      <%= form.password_field :password %>
    </div>
    <br/>
    <br/>
    <%= form.submit 'Login' %>
    <%= form.submit 'Sign Up' %>
  <% end %>
</div>